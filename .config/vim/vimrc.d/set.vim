set title
set termguicolors
set background=dark
set mouse=nvc
set nohlsearch
set incsearch
set noshowmode
set noruler
set laststatus=0
set noshowcmd

set updatetime=50

set encoding=utf8
set spelllang=en
set number relativenumber
set tabstop=4 shiftwidth=4

