[ -n "$TERM" ] && [ "$TERM" != "dumb" ] && [ "$(tput colors 2>/dev/null || echo 0)" -ge 8 ] && {
	export LESS_TERMCAP_mb=$'\e[1;32m'          # Bold Green
	export LESS_TERMCAP_md=$'\e[1;36m'          # Bold Cyan
	export LESS_TERMCAP_so=$'\e[1;33;44m'       # Bold Yellow on Blue
	export LESS_TERMCAP_se=$'\e[0m'             # Reset
	export LESS_TERMCAP_us=$'\e[4;34m'          # Underline Blue
	export LESS_TERMCAP_ue=$'\e[0m'             # Reset
	export LESS_TERMCAP_me=$'\e[0m'             # Reset
} || {
	export LESS_TERMCAP_md="$(tput bold; tput setaf 6)"	# bold-underlined/major attributes: cyan
	export LESS_TERMCAP_mb="$(tput bold; tput setaf 2)"	# bold: green
	export LESS_TERMCAP_me="$(tput sgr0)"				# End all attributes (reset)
	export LESS_TERMCAP_so="$(tput bold; tput setaf 3; tput setab 4)"	# standout: yellow on Blue
	export LESS_TERMCAP_se="$(tput rmso; tput sgr0)"	# End standout mode
	export LESS_TERMCAP_us="$(tput smul; tput setaf 4)"	# underline: blue
	export LESS_TERMCAP_ue="$(tput rmul; tput sgr0)"	# End underline mode
	export LESS_TERMCAP_mr=$(tput rev)
	export LESS_TERMCAP_mh=$(tput dim)
	export LESS_TERMCAP_ZN=$(tput ssubm)
	export LESS_TERMCAP_ZV=$(tput rsubm)
	export LESS_TERMCAP_ZO=$(tput ssupm)
	export LESS_TERMCAP_ZW=$(tput rsupm)
}
