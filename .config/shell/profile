# ~/.profile: executed by the command interpreter for login shells.
# This file is not read by bash(1), if ~/.bash_profile or ~/.bash_login exists.

# the default umask is set in /etc/profile; for setting the umask
# for ssh logins, install and configure the libpam-umask package.
#umask 022

# if running bash include .bashrc if it exists
[ -n "$BASH_VERSION" ] && \
	[ -f "$HOME/.bashrc" ] && \
		source "$HOME/.bashrc"

# set PATH so it includes user's private bin if it exists
[ -d "$HOME/bin" ] && \
	PATH="$HOME/bin:$PATH"

# set PATH so it includes user's private bin if it exists
[ -d "$HOME/.local/bin" ] && \
	PATH="$HOME/.local/bin:$PATH"

# Default programs:
export EDITOR="vim"
export VISUAL="vim"
export PAGER="less"
export TERMINAL="gnome-terminal"
export TERMINAL_PROG="$TERMINAL"
export BROWSER="firefox"

# ~/ Clean-up:
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_STATE_HOME="$HOME/.local/state"

export GTK2_RC_FILES="$XDG_CONFIG_HOME/gtk-2.0/gtkrc-2.0" # gtk 3 & 4 are XDG compliant
export VIMINIT="source $XDG_CONFIG_HOME/vim/vimrc"
export XINITRC="$XDG_CONFIG_HOME/x11/xinitrc"
export WGETRC="$XDG_CONFIG_HOME/wget/wgetrc"
export INPUTRC="$XDG_CONFIG_HOME/shell/inputrc"
export WINEPREFIX="$XDG_DATA_HOME/wineprefixes/default"
export FFMPEG_DATADIR="$XDG_CONFIG_HOME/ffmpeg"
export ANDROID_SDK_HOME="$XDG_CONFIG_HOME/android"
export GNUPGHOME="$XDG_DATA_HOME/gnupg"
export _JAVA_OPTIONS=-Djava.util.prefs.userRoot="$XDG_CONFIG_HOME"/java
# TeX
export TEXMFHOME="$XDG_DATA_HOME/texmf"
export TEXMFCONFIG="$XDG_CONFIG_HOME/texmf"
export TEXMFVAR="$XDG_CACHE_HOME/texmf"

export HISTFILE="$XDG_DATA_HOME/history"
export LESSHISTFILE="$XDG_CACHE_HOME/less/history"

export TIME="$(date '+%_I:%M %p %t %e %b %Y %a')"

# Other program settings:
export MOZ_USE_XINPUT2=1	# Mozilla smooth scrolling/touchpads.
